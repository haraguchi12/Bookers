<h3>Books</h3>

<table>
<thead>
<tr>
  <th>title</th>
  <th>body</th>
</tr>
</thead>
 
 <tbody>
<tr>
  <% @books.each do |book| %>
<td><%= book.title %></td>
<td><%= book.body %></td>
<td><%= link_to "show", book_path(book.id) %></td>
<td><%= link_to "edit", edit_book_path(book) %></td>
<td><%= link_to "destroy", book, method: :delete ,"data-confirm" => "Are you sure?" %></td>
</tr>
<% end %>
</tbody>   
</table>

<h2>New Book</h2>
<!-- form_with部分 -->
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br><%= f.submit '投稿' %></br>

<% end %>