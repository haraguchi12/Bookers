<div>
<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
</div>
<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <br><%= f.submit 'Update Book' %></br>
  <% end %>
  
<%= link_to "show", book_path(@book.id) %>
|
<a class="back" href="/books">Back</a>
